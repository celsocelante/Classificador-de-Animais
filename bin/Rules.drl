package com.classifier
import com.classifier.Animal;

/* Regras gerais que tentam determinar a categoria do animal */
rule "Aquatico"
	no-loop true
	salience 10
	when
		a : Animal(getHabitat("aquatico"))
	then
		a.votePeixes();
		a.voteAnfibios();
		a.voteRepteis();
		a.voteAves();
		a.voteMamiferos();
end

