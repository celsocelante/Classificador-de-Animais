/* Regras que determinam animais específicos */

rule "Tubarão"
	no-loop true
	salience 1
	when
		a : Animal(getHabitat("aquatico"), getRevestimento("cartilagem"), getLocomocao("nada"), 
				getReproducao("ovuliparo"), getAlimentacao("carnivoro"), getRespiracao("branquial"))
	then
		a.setNome("Tubarao");
end

